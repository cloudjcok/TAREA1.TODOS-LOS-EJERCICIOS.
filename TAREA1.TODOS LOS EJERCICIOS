
    // EXPRESIONES MATEMATICAS 
// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
    // expresion1,ejercicio1 
	//1. Dado a=3 y b=7, encuentra el valor de y = 2 * a + b - a mod 3.
	// y = 2 * a + b - a mod 3.
	//y= 2*3+7-3 mod 3
	//y=6+7-3 mod 3
	//y=6+7-0
	//y=13
	Funcion expresion1
	Definir a,b como entero
	a<-3
	b<-7
	resultado=2*a+b-a%3
	Escribir "El resultado de Y es:", resultado
FinFuncion

	
// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
	// expresion2,ejercicio2
	//2. Si a=10 y b=4, calcula el valor de z = a * b + 3 mod a + b.
	// z = a * b + 3 mod a + b.
	//z=10*4+3 mod 10+4
	//z=40+3 mod 10+4 
	//z=40+3+4
	//z=47
    funcion expresion2
    Definir a,b como entero
	a<-10
	b<-4
	resultado=a*b+3%a+b
	Escribir"El resultado de Z es:", resultado
FinFuncion


// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
   // expresion3,ejercicio3
  //3. Con a=6 y b=2, determina el valor de w = a - b + 2 * a mod b.
  // w = a - b + 2 * a mod b.
  //w=6-2+2*6 mod 2
  //w=6-2+12 mod 2
  //w=6-2+0
  //w=4
  Funcion expresion3
	  Definir a,b como entero
	  a<-6
	  b<-2
	  resultado<-a-b+2*a%b
	  Escribir "El resultado de W es:", resultado
  FinFuncion

  
  // Orden de procedencia:  (), ^ *, / mod div, + -
  // del mismo nivel se resuelve de izquierda a derecha.
  // expresion4,ejercicio4
  //4. Para a=8 y b=5, encuentra el valor de v = 2 * b + a div 2 + 4 * b mod a.
  // v = 2 * b + a div 2 + 4 * b mod a.
  //v=2*5+8/2+4*5 mod 8
  //v=10+8/2+20 mod 8
  //v=10+4+20 mod 8
  //v=10+4+4
  //v=18
  Funcion expresion4
	  Definir a,b Como Entero
	  a<-8
	  b<-5
	  resultado<-2*b+trunc(a/2)+4*b%a
	  Escribir "El resultado de V es:", resultado
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion5,ejercicio5
//5. Si a=12 y b=9, calcula el valor de u = b - a + 3 * a mod b.
// u = b - a + 3 * a mod b.
//u=9-12+3*12 mod 9
//u=9-12+36 mod 9
//u=9-12+0
//u=-3
Funcion expresion5
Definir a,b Como Entero
a<-12
b<-9
resultado<-b-a+3*a%b
Escribir "El resultado de U es:", resultado
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion6,ejercicio6
// (5 + 3 * 2) + 9 > 3 * 5 * 14 % 3
// (5 + 6) + 9 > 3 * 5 * 14 % 3
// 11 + 9 > 3 * 5 * 14 % 3
// 11 + 9 > 210 % 3
// 11 + 9 > 0
//20 > 0
//verdadero
Funcion expresion6
	Definir a Como logico
	a=(5+3*2)+9>3*5*14%3
	Escribir"la respuesta es:"
	Escribir a
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion7,ejercicio7
//2 *(4 - 10 + 8)/2* 36 *(1/2)
// (2 * 2 / 2 )* 36 * 1/2
// 2 * 36 * 1/2
// 36
Funcion expresion7
	Definir x Como Entero
	x=2*trunc(4-10+8)/2*36*(1/2)
	Escribir "la respuesta es:"
	Escribir x
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion8,ejercicio8
//260 / 12 + 54 % 3 - 85 % 7
//21.6 + 54 % 3 - 85 % 7
//21.6 - 1
//20.6
Funcion expresion8
	Definir x Como real
	x=(260/12)+54%3-85%7
	Escribir "la respuesta es:"
	Escribir x
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion9,ejercicio9
//(48 < 2 * 3) | | (2 * 7 < 12)
// 48 < 6 | | 14 < 12
// falso
Funcion expresion9
	Definir x Como Logico
	x=(48<2*3) o (2*7<12)
	Escribir "la respuesta es:"
	Escribir x
FinFuncion

// Orden de procedencia:  (), ^ *, / mod div, + -
// del mismo nivel se resuelve de izquierda a derecha.
// expresion10,ejercicio10
//((8 > 2) | | (932 < 23) ) && 4 == 2
// 8 > 2 es verdadero
// 932 < 23 es falso,pero se sigue cumpliendo una de las 2 ,por lo tanto sigue verdadero
//4 == 2 falso,no son iguales
// cuando tenemos && ambas respuestas deben ser verdaderos
// Entonces es falso
Funcion expresion10
	Definir x Como Logico
	x=((8>2) o (932<23)) y 4==2
	Escribir "la respuesta es:"
	Escribir x
FinFuncion


